{
  "name": "tms-captcha",
  "version": "0.7.2",
  "repository": "git@github.com:arpandaze/tms-captcha.git",
  "author": "Daze <dazehere@yandex.com>, Mumukshu D.C <phoenixrising656@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.4.0",
    "@tsconfig/strictest": "^2.0.8",
    "@types/chrome": "^0.0.208",
    "@types/firefox-webext-browser": "^111.0.1",
    "@types/node": "^18.11.18",
    "buffer": "^5.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "web-ext": "^8.4.0"
  },
  "dependencies": {
    "crx-hotreload": "^1.0.6",
    "image-js": "^0.35.2"
  },
  "scripts": {
    "start:chrome": "node scripts/build-chrome.js",
    "start:firefox": "node scripts/build-firefox.js",
    "build:chrome": "node scripts/build-chrome.js",
    "build:firefox": "node scripts/build-firefox.js",
    "build:all": "npm run build:chrome && npm run build:firefox",
    "zip:firefox": "cd dist-firefox && web-ext build --overwrite-dest --filename=tmscaptcha-firefox-{version}.zip --artifacts-dir=../web-ext-artifacts",
    "zip:chrome": "cd dist-chrome && web-ext build --overwrite-dest --filename=tmscaptcha-chrome-{version}.zip --artifacts-dir=../web-ext-artifacts",
    "zip:all": "npm run zip:chrome && npm run zip:firefox",
    "publish:firefox": "npm run build:firefox && npm run zip:firefox && cd dist-firefox && web-ext sign --api-key=$MOZILLA_JWT_ISSUER --api-secret=$MOZILLA_JWT_SECRET --channel=listed --artifacts-dir=../web-ext-artifacts",
    "calibrate": "ts-node scripts/calibrate.ts",
    "test": "ts-node scripts/test.ts",
    "lint": "biome check .",
    "format": "biome check --write ."
  }
}
