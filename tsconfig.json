{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist/js",
    "noEmit": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*.ts", "scripts/**/*.ts"]
}
